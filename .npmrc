# Оптимизация для Railway
prefer-offline=true
audit=false
fund=false
progress=false
loglevel=warn

# Кэширование для ускорения установки
# Railway автоматически кэширует node_modules, но можно указать явно
cache=/tmp/.npm
package-lock=true

# Оптимизация Puppeteer для Railway
# Railway может иметь системный Chromium, но лучше использовать встроенный
puppeteer_skip_chromium_download=true
# Используем кэш Railway для Chromium (Railway кэширует /tmp между билдами)
PUPPETEER_CACHE_DIR=/tmp/.cache/puppeteer

# Оптимизация установки зависимостей
legacy-peer-deps=false
strict-peer-deps=false

# Использовать только production зависимости при установке (Railway сам управляет этим)
# production=false

